		"format": "biome format src/",
		"format:fix": "biome format --write src/"
	},
	"keywords": ["mcp", "contentstack", "cms", "headless", "content-management"],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.7.0",
		"axios": "^1.6.0",
		"dotenv": "^16.3.1",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.5.3",
		"@types/node": "^20.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	}
}
